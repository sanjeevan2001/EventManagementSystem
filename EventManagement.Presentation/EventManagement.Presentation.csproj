  -->

  <!--
    During development, avoid writing build outputs to the same folder as a running instance
    to reduce "file locked by" errors. Debug outputs are redirected to a separate folder.
  -->
  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <OutputPath>bin\Debug.Build\</OutputPath>
    <IntermediateOutputPath>obj\Debug.Build\</IntermediateOutputPath>
  </PropertyGroup>
</Project>
